{
	"name": "@atomazing-org/vite-config",
	"version": "0.2.10",
	"private": false,
	"description": "A library providing a vite configuration with including PWA and MF supports.",
	"author": "RatzNikita + MarkSinD",
	"license": "MIT",
	"homepage": "https://github.com/atomazing/vite-config",
	"keywords": [
		"atomazing-org",
		"vite-config",
		"module-federation",
		"pwa",
		"utils"
	],
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./configs/tsconfig.json": "./configs/tsconfig.json",
		"./registerSW": {
			"types": "./registerSW.d.ts"
		}
	},
	"files": [
		"*.d.ts",
		"dist",
		"configs",
		"examples/assets",
		"README.md"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"bin": {
		"create-manifest": "./dist/bin/create-manifest.mjs"
	},
	"scripts": {
		"build": "tsup",
		"prepublishOnly": "npm run build",
		"postinstall": "node -e \"const fs=require('fs');const {spawnSync}=require('child_process');const candidate=fs.existsSync('./dist/bin/setup.mjs')?'./dist/bin/setup.mjs':(fs.existsSync('./bin/setup.mjs')?'./bin/setup.mjs':null);if(!candidate)process.exit(0);const r=spawnSync(process.execPath,[candidate],{stdio:'inherit'});process.exit(typeof r.status==='number'?r.status:1);\"",
		"check:examples:build": "node ./scripts/check-examples.mjs build",
		"check:examples:types": "node ./scripts/check-examples.mjs types",
		"check:examples:smoke": "node ./scripts/smoke-examples.mjs",
		"check:examples": "node ./scripts/check-examples.mjs all",
		"capture:examples:screenshots": "node ./scripts/capture-example-screenshots.mjs"
	},
	"peerDependencies": {
		"workbox-build": "7.3.0",
		"workbox-window": "7.3.0"
	},
	"devDependencies": {
		"@types/node": "24.1.0",
		"prettier": "3.6.2",
		"tsup": "8.5.0",
		"typescript": "5.8.3",
		"vitest": "3.2.4"
	},
	"dependencies": {
		"@inquirer/prompts": "7.7.1",
		"@emotion/babel-plugin": "11.13.5",
		"@lingui/babel-plugin-lingui-macro": "5.3.3",
		"@lingui/vite-plugin": "5.8.0",
		"@module-federation/vite": "1.6.0",
		"@vitejs/plugin-basic-ssl": "2.1.0",
		"@vitejs/plugin-react": "4.6.0",
		"esbuild": "0.25.8",
		"vite": "7.0.5",
		"vite-plugin-checker": "0.10.0",
		"vite-plugin-pwa": "1.0.2",
		"vite-plugin-qrcode": "0.3.0",
		"vite-tsconfig-paths": "5.1.4",
		"workbox-build": "7.3.0",
		"workbox-window": "7.3.0"
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid",
		"semi": false,
		"singleQuote": true,
		"printWidth": 100
	}
}
